@using DemoCenter.Web.Models.States;
@using DemoCenter.Web.Views.Bases
@using PrettyBlazor

<Condition Evaluation=@(CurrentState is State.Loading)>
    <Match>
        <LabelBase Text="Loading..." />
    </Match>
</Condition>

<Condition Evaluation=@(CurrentState is State.Content)>
    <Match>
        <TeacherComponent Teachers="TeacherViews" />
    </Match>
</Condition>

<Condition Evaluation=@(CurrentState is State.Error)>
    <Match>
        <LabelBase Text="An error has occurred, contact support" />
    </Match>
</Condition>
